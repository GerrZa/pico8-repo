--more draw
function drawgame()
	cls(0)
	starfield()
	animstar()
	spr(s.spr,s.x,s.y)
	spr(5+ff%3,s.x,s.y+8)
	
	for i=1,#bo do
		local bul = bo[i]
		spr(16,bul.x,bul.y)
	end
	
	if mz>0 then
		circfill(s.x+4,s.y-3,mz,7)
	 circfill(s.x+3,s.y-3,mz,7)
	end
	
	for i=#ene,1,-1 do
		local en=ene[i]
		en.f+=0.125
		spr(en.spr+flr(en.f)%2,en.x,en.y)
	
		if en.y>128 then
			del(ene,en)
		end
	end
	
	print("score: "..score,42,1,12)
	

	for i=1,3 do
		if hp>=i then
		 spr(9,(i-1)*9,0)
		else
			spr(10,(i-1)*9,0)
		end
	end
end

